<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:i="clr-namespace:Avalonia.Xaml.Interactivity;assembly=Avalonia.Xaml.Interactivity"
             xmlns:iac="clr-namespace:Avalonia.Xaml.Interactions.Custom;assembly=Avalonia.Xaml.Interactions.Custom"
             xmlns:beh="clr-namespace:AvalonStudio.Behaviors;assembly=AvalonStudio">
    <StackPanel Orientation="Horizontal" Gap="8">
        <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Bottom" />
        <beh:FormattedTextBlock Name="LocationTextBlock" Text="{Binding Location}" FontSize="10" Spans="{Binding Spans}" VerticalAlignment="Bottom" />
    </StackPanel>
</UserControl>
