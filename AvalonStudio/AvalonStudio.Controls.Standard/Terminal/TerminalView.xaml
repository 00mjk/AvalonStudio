<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cont="clr-namespace:AvalonStudio.Controls;assembly=AvalonStudio.Extensibility"
             xmlns:vt100="clr-namespace:VtNetCore.Avalonia;assembly=VtNetCore.Avalonia">
  <cont:ToolControl Title="Terminal">
    <Grid>
      <TextBlock Text="Terminal is not connected." VerticalAlignment="Center" HorizontalAlignment="Center" />
      <vt100:VirtualTerminalControl ActiveConnection="{Binding Connection}" IsVisible="{Binding TerminalVisible}" />      
    </Grid>
  </cont:ToolControl>
</UserControl>