<UserControl xmlns="https://github.com/avaloniaui">
    <Grid>
      <Grid.Styles>
        <Style Selector="TextBox">
          <Setter Property="Background" Value="Transparent" />
        </Style>
      </Grid.Styles>

        <StackPanel Orientation="Horizontal" Gap="5">
            <TextBlock Text="Location of Dotnet executable." />
            <TextBox Text="{Binding DotNetPath}" IsReadOnly="true" Width="400" />
            <Button Content="Browse" Command="{Binding BrowseCommand}" />
        </StackPanel>
    </Grid>    
</UserControl>